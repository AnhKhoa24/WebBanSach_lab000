@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách đơn hàng</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-3">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Tìm kiếm...">
                    <button type="button" class="btn btn-primary mx-2">Search</button>
                </div>

            </div>

        </div>
        <div class="row">
            <div class="table-responsive table-hover">
                <table class="table table-bordered  table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="bg-primary text-light">
                            <th style="width:5%">#</th>
                            <th style="width:20%">Mã đơn</th>
                            <th style="width:25%">Ngày đặt</th>
                            <th style="width:25%">Ngày giao</th>
                            <th style="width:25%">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody id="dataDonHang">
                        
                    </tbody>
                </table>
            </div>
        </div>
        <nav aria-label="...">
            <ul class="pagination justify-content-end" id="phantrang">
               
            </ul>
        </nav>

    </div>
</div>
<script src="~/js/donhang.js"></script>