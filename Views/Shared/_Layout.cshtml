<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script>

    <title>Bán sách </title>
</head>

<body>
    <style>
        .dropdown-toggle::after {
            display: none; /* Ẩn mũi tên dropdown */
        }
    </style>


    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm p-3 mb-3 bg-body rounded">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" href="#">Bán sách</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-primary fw-bold" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#" onclick="getCart(true)">Giỏ hàng</a>
                        </li>

                    </ul>
                    <!-- Search Form in the Center -->
                    <form class="d-flex mx-auto" style="width: 35%;">
                        <input class="form-control me-2 shadow-sm rounded-pill" type="search" placeholder="Search" aria-label="Search" style="flex-grow: 1;">
                        <button class="btn btn-outline-success rounded-pill" type="submit">Search</button>
                    </form>
                    <!-- Avatar section on the right -->
                    <div class="ms-auto dropdown d-none" id="inforuser">
                        <a href="#" class="dropdown-toggle" id="avatarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/khoa.jpg" style="width:40px;" class="rounded-pill shadow-sm">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="avatarDropdown">
                            <li><a class="dropdown-item" href="#" data-bs-toggle="offcanvas" data-bs-target="#in4User" aria-controls="offcanvasRight">Thông tin người dùng</a></li>
                            <li><a class="dropdown-item" href="#" onclick="logout()">Đăng xuất</a></li>
                        </ul>
                    </div>

                    <div class="ms-auto" id="logindothoi">
                        <a class="nav-link active text-primary fw-bold" aria-current="page" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Đăng nhập</a>
                    </div>

                </div>
            </div>
        </nav>
    </div>


    @RenderBody()

    <!-- Login -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-custom">
            <!-- Thêm class modal-dialog-centered và modal-custom -->
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Đăng nhập</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="loginError" class="alert alert-danger d-none">
                        Đăng nhập thất bại! Vui lòng kiểm tra lại thông tin.
                    </div>
                    <form>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Tài khoản</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">Vui lòng không chia sẻ thông tin đăng nhập</div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        @* <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div> *@
                    </form>
                </div>
                <div class="modal-footer" id="nutthemmodal">
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                    <button type="submit" id="btnLogin" class="btn btn-success">Đăng nhập</button>
                </div>
            </div>
        </div>
    </div>


    <div class="offcanvas offcanvas-end" tabindex="-1" id="in4User" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 id="intro"></h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            ...
        </div>
    </div>


    <div class="offcanvas offcanvas-start" tabindex="-1" id="giohangCanvas" aria-labelledby="offcanvasExampleLabel" style="width: 500px;">
        <!-- Thay đổi giá trị width tùy ý -->
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Giỏ hàng</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <table class="table">
                <thead>
                </thead>
                <tbody id="cartInCanvas">

                    <!-- Thêm các hàng khác nếu cần -->

                </tbody>

            </table>
            <div class="row">
                @* class="d-grid gap-2" *@
                <button class="btn btn-primary" id="btnThanhToan" onclick="thanhtoan()" type="button" disabled>Tiến hành thanh toán</button>
            </div>
        </div>

        <div class="modal fade" id="thongtindathang" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-custom">
                <!-- Thêm class modal-dialog-centered và modal-custom -->
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thông tin nhận hàng</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <input type="text" id="nameNN" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" id="emailNN" class="form-control">
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" id="sdtNN" class="form-control">
                        </div>
                        <div class="input-group">
                            <textarea class="form-control" id="diachiNN" aria-label="With textarea"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer" id="nutthemmodal">
                        <button type="submit" onclick="doithongtin()" class="btn btn-success">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/common.js"></script>
</body>

</html>